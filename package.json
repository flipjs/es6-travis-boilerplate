{
  "name": "es6-travis-boilerplate",
  "description": "es6-travis-boilerplate",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.js",
  "scripts": {
    "commit": "git-cz",
    "prebuild": "npm run lint && npm run clean",
    "build": "babel --presets es2015 -d lib/ src/",
    "clean": "rimraf lib && mkdir lib",
    "cover": "nyc --reporter lcov --reporter text npm run test",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "lint": "eslint src/ test/",
    "test": "ava --require babel-register",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flipjs/es6-travis-boilerplate.git"
  },
  "keywords": [
    "es6",
    "travis",
    "boilerplate",
    "codecov.io",
    "ava",
    "nyc",
    "standardjs"
  ],
  "author": "Felipe Apostol <flipjs.io@gmail.com> (http://flipjs.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flipjs/es6-travis-boilerplate/issues"
  },
  "homepage": "https://github.com/flipjs/es6-travis-boilerplate#readme",
  "devDependencies": {
    "ava": "0.13.0",
    "babel-cli": "6.6.5",
    "babel-preset-es2015": "6.6.0",
    "babel-register": "6.7.2",
    "codecov.io": "0.1.6",
    "commitizen": "2.7.3",
    "cz-conventional-changelog": "1.1.5",
    "eslint": "2.5.1",
    "eslint-config-standard": "5.1.0",
    "eslint-plugin-babel": "3.1.0",
    "eslint-plugin-promise": "1.1.0",
    "eslint-plugin-standard": "1.3.2",
    "ghooks": "1.0.3",
    "nyc": "6.1.1",
    "rimraf": "2.5.2",
    "semantic-release": "4.3.5"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run cover && npm run build"
    }
  }
}
